{"ast":null,"code":"export default {\n  name: 'RockPaperScissorsGame',\n  data() {\n    return {\n      username: '',\n      wins: 0,\n      losses: 0,\n      ties: 0,\n      computerWins: 0,\n      computerLosses: 0,\n      userChoice: null,\n      computerChoice: null,\n      resultMessage: '',\n      resultClass: ''\n    };\n  },\n  mounted() {\n    this.username = localStorage.getItem('username') || 'Player';\n    this.wins = parseInt(localStorage.getItem(`${this.username}_wins`)) || 0;\n    this.losses = parseInt(localStorage.getItem(`${this.username}_losses`)) || 0;\n    this.ties = parseInt(localStorage.getItem(`${this.username}_ties`)) || 0;\n    this.computerWins = parseInt(localStorage.getItem(`${this.username}_computerWins`)) || 0;\n    this.computerLosses = parseInt(localStorage.getItem(`${this.username}_computerLosses`)) || 0;\n  },\n  methods: {\n    playGame(choice) {\n      const choices = ['rock', 'paper', 'scissors'];\n      const computerChoice = choices[Math.floor(Math.random() * choices.length)];\n      this.userChoice = choice;\n      this.computerChoice = computerChoice;\n      if (choice === computerChoice) {\n        this.ties++;\n        this.resultMessage = \"It's a tie!\";\n        this.resultClass = 'text-yellow-500';\n      } else if (choice === 'rock' && computerChoice === 'scissors' || choice === 'paper' && computerChoice === 'rock' || choice === 'scissors' && computerChoice === 'paper') {\n        this.wins++;\n        this.computerLosses++;\n        this.resultMessage = `You win! ${choice.charAt(0).toUpperCase() + choice.slice(1)} beats ${computerChoice.charAt(0).toUpperCase() + computerChoice.slice(1)}!`;\n        this.resultClass = 'text-green-500';\n      } else {\n        this.losses++;\n        this.computerWins++;\n        this.resultMessage = `Computer wins! ${computerChoice.charAt(0).toUpperCase() + computerChoice.slice(1)} beats ${choice.charAt(0).toUpperCase() + choice.slice(1)}!`;\n        this.resultClass = 'text-red-500';\n      }\n      this.updateLocalStorage();\n    },\n    resetGame() {\n      this.userChoice = null;\n      this.computerChoice = null;\n      this.resultMessage = '';\n      this.resultClass = '';\n    },\n    updateLocalStorage() {\n      localStorage.setItem(`${this.username}_wins`, this.wins);\n      localStorage.setItem(`${this.username}_losses`, this.losses);\n      localStorage.setItem(`${this.username}_ties`, this.ties);\n      localStorage.setItem(`${this.username}_computerWins`, this.computerWins);\n      localStorage.setItem(`${this.username}_computerLosses`, this.computerLosses);\n    },\n    indicatorClass() {\n      return 'bg-' + (this.resultMessage.startsWith('You win') ? 'green' : this.resultMessage.startsWith('Computer wins') ? 'red' : 'yellow') + '-500';\n    },\n    getImage(choice) {\n      return choice === 'rock' ? 'c4hjWHw.png' : choice === 'paper' ? 'dh5Z6mq.png' : 'qt3WWjy.png';\n    }\n  }\n};","map":{"version":3,"names":["name","data","username","wins","losses","ties","computerWins","computerLosses","userChoice","computerChoice","resultMessage","resultClass","mounted","localStorage","getItem","parseInt","methods","playGame","choice","choices","Math","floor","random","length","charAt","toUpperCase","slice","updateLocalStorage","resetGame","setItem","indicatorClass","startsWith","getImage"],"sources":["C:\\Users\\Mesha\\Desktop\\Rock-Paper-Scissors - Game\\rock-paper-scissors\\src\\components\\RockPaperScissorsGame.vue"],"sourcesContent":["<template>\r\n  <div class=\"game text-white bg-gray-900 h-screen flex flex-col items-center justify-start\">\r\n    <!-- Scoreboard at the Top -->\r\n    <div class=\"w-full max-w-4xl py-8\">\r\n      <div class=\"grid grid-cols-2 gap-4 text-center\">\r\n        <!-- Player's Score -->\r\n        <div class=\"bg-blue-700 p-6 rounded-lg shadow-lg flex flex-col items-center\">\r\n          <h2 class=\"text-2xl font-bold text-white mb-4\">\r\n            <i class=\"fas fa-user-circle mr-2\"></i>{{ username }}'s Score\r\n          </h2>\r\n          <div class=\"flex justify-around w-full text-lg\">\r\n            <div class=\"text-center\">\r\n              <p class=\"font-semibold\">Wins</p>\r\n              <p class=\"text-3xl font-bold text-green-500\">{{ wins }}</p>\r\n            </div>\r\n            <div class=\"text-center\">\r\n              <p class=\"font-semibold\">Losses</p>\r\n              <p class=\"text-3xl font-bold text-red-500\">{{ losses }}</p>\r\n            </div>\r\n            <div class=\"text-center\">\r\n              <p class=\"font-semibold\">Ties</p>\r\n              <p class=\"text-3xl font-bold text-yellow-500\">{{ ties }}</p>\r\n            </div>\r\n          </div>\r\n        </div>\r\n        <!-- Computer's Score -->\r\n        <div class=\"bg-red-700 p-6 rounded-lg shadow-lg flex flex-col items-center\">\r\n          <h2 class=\"text-2xl font-bold text-white mb-4\">\r\n            <i class=\"fas fa-desktop mr-2\"></i>Computer's Score\r\n          </h2>\r\n          <div class=\"flex justify-around w-full text-lg\">\r\n            <div class=\"text-center\">\r\n              <p class=\"font-semibold\">Wins</p>\r\n              <p class=\"text-3xl font-bold text-green-500\">{{ computerWins }}</p>\r\n            </div>\r\n            <div class=\"text-center\">\r\n              <p class=\"font-semibold\">Losses</p>\r\n              <p class=\"text-3xl font-bold text-red-500\">{{ computerLosses }}</p>\r\n            </div>\r\n            <div class=\"text-center\">\r\n              <p class=\"font-semibold\">Ties</p>\r\n              <p class=\"text-3xl font-bold text-yellow-500\">{{ ties }}</p>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Go Back Button inside the top gap -->\r\n    <router-link to=\"/home\" class=\"bg-gray-600 hover:bg-gray-700 text-white font-bold py-3 px-8 rounded-lg focus:outline-none focus:shadow-outline text-xl\">\r\n      <i class=\"fas fa-home mr-3\"></i>Go Back to Homepage\r\n    </router-link>\r\n\r\n    <!-- Game Area -->\r\n    <div class=\"flex justify-center w-full max-w-3xl mt-8 space-x-8\">\r\n      <div v-for=\"choice in ['rock', 'paper', 'scissors']\" :key=\"choice\" class=\"relative text-center\">\r\n        <img :src=\"`https://i.imgur.com/${getImage(choice)}`\" :alt=\"choice\" class=\"h-40 cursor-pointer transform transition-all\" @click=\"playGame(choice)\">\r\n        <p class=\"text-lg font-semibold mt-2\">{{ choice.charAt(0).toUpperCase() + choice.slice(1) }}</p>\r\n        <!-- Indicator Icons -->\r\n        <div v-if=\"userChoice === choice\" class=\"absolute top-[-10px] right-[-10px] w-8 h-8 rounded-full\" :class=\"indicatorClass\"></div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Buttons -->\r\n    <div class=\"flex space-x-4 mb-4 mt-8\">\r\n      <!-- Play Again Button -->\r\n      <button v-if=\"userChoice\" @click=\"resetGame\" class=\"bg-blue-500 hover:bg-blue-600 text-white font-bold py-4 px-8 rounded-lg focus:outline-none focus:shadow-outline flex items-center justify-center text-xl\">\r\n        <i class=\"fas fa-redo-alt mr-3\"></i>Play Again\r\n      </button>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: 'RockPaperScissorsGame',\r\n  data() {\r\n    return {\r\n      username: '',\r\n      wins: 0,\r\n      losses: 0,\r\n      ties: 0,\r\n      computerWins: 0,\r\n      computerLosses: 0,\r\n      userChoice: null,\r\n      computerChoice: null,\r\n      resultMessage: '',\r\n      resultClass: '',\r\n    };\r\n  },\r\n  mounted() {\r\n    this.username = localStorage.getItem('username') || 'Player';\r\n    this.wins = parseInt(localStorage.getItem(`${this.username}_wins`)) || 0;\r\n    this.losses = parseInt(localStorage.getItem(`${this.username}_losses`)) || 0;\r\n    this.ties = parseInt(localStorage.getItem(`${this.username}_ties`)) || 0;\r\n    this.computerWins = parseInt(localStorage.getItem(`${this.username}_computerWins`)) || 0;\r\n    this.computerLosses = parseInt(localStorage.getItem(`${this.username}_computerLosses`)) || 0;\r\n  },\r\n  methods: {\r\n    playGame(choice) {\r\n      const choices = ['rock', 'paper', 'scissors'];\r\n      const computerChoice = choices[Math.floor(Math.random() * choices.length)];\r\n      this.userChoice = choice;\r\n      this.computerChoice = computerChoice;\r\n\r\n      if (choice === computerChoice) {\r\n        this.ties++;\r\n        this.resultMessage = \"It's a tie!\";\r\n        this.resultClass = 'text-yellow-500';\r\n      } else if (\r\n        (choice === 'rock' && computerChoice === 'scissors') ||\r\n        (choice === 'paper' && computerChoice === 'rock') ||\r\n        (choice === 'scissors' && computerChoice === 'paper')\r\n      ) {\r\n        this.wins++;\r\n        this.computerLosses++;\r\n        this.resultMessage = `You win! ${choice.charAt(0).toUpperCase() + choice.slice(1)} beats ${computerChoice.charAt(0).toUpperCase() + computerChoice.slice(1)}!`;\r\n        this.resultClass = 'text-green-500';\r\n      } else {\r\n        this.losses++;\r\n        this.computerWins++;\r\n        this.resultMessage = `Computer wins! ${computerChoice.charAt(0).toUpperCase() + computerChoice.slice(1)} beats ${choice.charAt(0).toUpperCase() + choice.slice(1)}!`;\r\n        this.resultClass = 'text-red-500';\r\n      }\r\n      this.updateLocalStorage();\r\n    },\r\n    resetGame() {\r\n      this.userChoice = null;\r\n      this.computerChoice = null;\r\n      this.resultMessage = '';\r\n      this.resultClass = '';\r\n    },\r\n    updateLocalStorage() {\r\n      localStorage.setItem(`${this.username}_wins`, this.wins);\r\n      localStorage.setItem(`${this.username}_losses`, this.losses);\r\n      localStorage.setItem(`${this.username}_ties`, this.ties);\r\n      localStorage.setItem(`${this.username}_computerWins`, this.computerWins);\r\n      localStorage.setItem(`${this.username}_computerLosses`, this.computerLosses);\r\n    },\r\n    indicatorClass() {\r\n      return 'bg-' + (this.resultMessage.startsWith('You win') ? 'green' : this.resultMessage.startsWith('Computer wins') ? 'red' : 'yellow') + '-500';\r\n    },\r\n    getImage(choice) {\r\n      return choice === 'rock' ? 'c4hjWHw.png' : choice === 'paper' ? 'dh5Z6mq.png' : 'qt3WWjy.png';\r\n    }\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n/* Styles here can further adjust margins, colors, etc. */\r\n</style>\r\n"],"mappings":"AA0EA,eAAe;EACbA,IAAI,EAAE,uBAAuB;EAC7BC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,EAAE;MACZC,IAAI,EAAE,CAAC;MACPC,MAAM,EAAE,CAAC;MACTC,IAAI,EAAE,CAAC;MACPC,YAAY,EAAE,CAAC;MACfC,cAAc,EAAE,CAAC;MACjBC,UAAU,EAAE,IAAI;MAChBC,cAAc,EAAE,IAAI;MACpBC,aAAa,EAAE,EAAE;MACjBC,WAAW,EAAE;IACf,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACV,QAAO,GAAIW,YAAY,CAACC,OAAO,CAAC,UAAU,KAAK,QAAQ;IAC5D,IAAI,CAACX,IAAG,GAAIY,QAAQ,CAACF,YAAY,CAACC,OAAO,CAAC,GAAG,IAAI,CAACZ,QAAQ,OAAO,CAAC,KAAK,CAAC;IACxE,IAAI,CAACE,MAAK,GAAIW,QAAQ,CAACF,YAAY,CAACC,OAAO,CAAC,GAAG,IAAI,CAACZ,QAAQ,SAAS,CAAC,KAAK,CAAC;IAC5E,IAAI,CAACG,IAAG,GAAIU,QAAQ,CAACF,YAAY,CAACC,OAAO,CAAC,GAAG,IAAI,CAACZ,QAAQ,OAAO,CAAC,KAAK,CAAC;IACxE,IAAI,CAACI,YAAW,GAAIS,QAAQ,CAACF,YAAY,CAACC,OAAO,CAAC,GAAG,IAAI,CAACZ,QAAQ,eAAe,CAAC,KAAK,CAAC;IACxF,IAAI,CAACK,cAAa,GAAIQ,QAAQ,CAACF,YAAY,CAACC,OAAO,CAAC,GAAG,IAAI,CAACZ,QAAQ,iBAAiB,CAAC,KAAK,CAAC;EAC9F,CAAC;EACDc,OAAO,EAAE;IACPC,QAAQA,CAACC,MAAM,EAAE;MACf,MAAMC,OAAM,GAAI,CAAC,MAAM,EAAE,OAAO,EAAE,UAAU,CAAC;MAC7C,MAAMV,cAAa,GAAIU,OAAO,CAACC,IAAI,CAACC,KAAK,CAACD,IAAI,CAACE,MAAM,CAAC,IAAIH,OAAO,CAACI,MAAM,CAAC,CAAC;MAC1E,IAAI,CAACf,UAAS,GAAIU,MAAM;MACxB,IAAI,CAACT,cAAa,GAAIA,cAAc;MAEpC,IAAIS,MAAK,KAAMT,cAAc,EAAE;QAC7B,IAAI,CAACJ,IAAI,EAAE;QACX,IAAI,CAACK,aAAY,GAAI,aAAa;QAClC,IAAI,CAACC,WAAU,GAAI,iBAAiB;MACtC,OAAO,IACJO,MAAK,KAAM,MAAK,IAAKT,cAAa,KAAM,UAAU,IAClDS,MAAK,KAAM,OAAM,IAAKT,cAAa,KAAM,MAAM,IAC/CS,MAAK,KAAM,UAAS,IAAKT,cAAa,KAAM,OAAO,EACpD;QACA,IAAI,CAACN,IAAI,EAAE;QACX,IAAI,CAACI,cAAc,EAAE;QACrB,IAAI,CAACG,aAAY,GAAI,YAAYQ,MAAM,C